<Page x:Class="LetsPlay_app.Pages.AddProject"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LetsPlay_app.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="670" d:DesignWidth="380"
      Title="AddProject" Background="#E2E2EA">

    <Grid>
        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,10,0,0" Height="600" Width="300" Padding="5" TextWrapping="Wrap" Text="Here a logged in user can create a new project: title, description, roles, budget, division of income, upload media, planning, location." FontSize="18"/>


        <TextBox HorizontalAlignment="Left" Margin="20,150,0,0" TextWrapping="Wrap" Text="Project Title" VerticalAlignment="Top" Width="280"/>
        <TextBox HorizontalAlignment="Left" Margin="20,180,0,0" TextWrapping="Wrap" Text="Description" VerticalAlignment="Top" Width="280" Height="150"/>
        <TextBox HorizontalAlignment="Left" Margin="180,350,0,0" TextWrapping="Wrap" Text="add amount" VerticalAlignment="Top" Width="120"/>

        <TextBox HorizontalAlignment="Left" Margin="20,351,0,0" TextWrapping="Wrap" Text="add role" VerticalAlignment="Top" Width="120"/>

        <Button Content="Add role" HorizontalAlignment="Left" Margin="180,560,0,0" Height="50" Width="120" VerticalAlignment="Top"/>


        <TextBox HorizontalAlignment="Left" Margin="180,498,0,0" TextWrapping="Wrap" Text="Location" VerticalAlignment="Top" Width="120"/>
        <ListBox x:Name="lsbRoles" HorizontalAlignment="Left" Margin="20,380,0,0" VerticalAlignment="Top" Width="150" Height="50"/>

        <DatePicker HorizontalAlignment="Left" Margin="38,529,0,0" VerticalAlignment="Top"/>
        <DatePicker HorizontalAlignment="Left" Margin="38,568,0,0" VerticalAlignment="Top"/>

        <Button Content="Add Participant" HorizontalAlignment="Left" Margin="180,380,0,0" Height="30" Width="120" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="180,521,0,0" TextWrapping="Wrap" Text="Project Budget" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Page>
