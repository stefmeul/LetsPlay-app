<Page x:Class="LetsPlay_app.ProjectSettings"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LetsPlay_app"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProjectSettings" Background="#E2E2EA">

    <Grid>

        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,10,0,0" Height="600" Width="300" Padding="15" TextWrapping="Wrap" Text="Here a logged in user can see their projects and select to edit (title, description, roles, budget, division of income, upload media, planning, location) or remove them." FontSize="18"/>
        <Button Content="Edit" HorizontalAlignment="Left" Margin="50,560,0,0" Height="50" Width="120" VerticalAlignment="Top"/>
        <Button Content="Remove" HorizontalAlignment="Left" Margin="180,560,0,0" Height="50" Width="120" VerticalAlignment="Top"/>

    </Grid>
</Page>
